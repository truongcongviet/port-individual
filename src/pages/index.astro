---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import astro from '../assets/about-astro.png'
import astroAvatar from '../assets/astro-avatar.png'
import vietAvatar from '../assets/viet.jpg'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['TypeScript', 'JS', 'PHP', 'Solidity', 'Move', 'Golang']
const frontend = ['React', 'NextJS', 'Astro', 'TailwindCSS', 'React Native', 'Web3', 'Ethers', 'Hardhat']
const backend = ['NodeJS', 'Express', 'Prisma', 'PostgreSQL', 'MongoDB', 'Docker', 'Kubernetes']
const others = ['Technical Writing', 'Developer Relations', 'Public Speaking', 'AI', 'Blockchain', 'Web3', 'NFTs', 'Smart Contracts', 'EVM', 'SUI', 'SOLANA', 'Wallets', 'Dapps', 'NFT Collections', 'AI Integration']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
